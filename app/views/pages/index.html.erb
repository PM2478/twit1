<% if !user_signed_in? # if the user is not signed in, render this %>
    <style>
        body {
             background: linear-gradient( /* somewhat transparent film on top of the BG to make it look darker. */
                rgba(0,0,0, 0.7),
                rgba(0,0,0, 0.7)
                ), url("political_rally.jpg") no-repeat center center fixed
                
            ; /* only display once, center horizontal and vertical, dont let scroll change position. */
            -webkit-background-size: cover;
            -moz-background-size: cover; /* cover the whole html element. */
            -o-background-size: cover;
            background-size: cover;
        }
        h1 {
            color: white;
            font-weight: bold;
        }
        .container-index row {
            float: left;
            margin-right: 15%;
            margin-left: 15%;
        }
        .text {
            color: white;
            font-weight: 300;
            font-size: 150%;
        }
        .footer-links {
            text-align: center;
            color: white;
            margin-top: 30%;
            font-size: 75%;
        }
        .log-in {
            color: white;
            float: right;
            width: 300px;
            height: 150px;
            margin-top: 7.5%;
        }
        .sign-up {
            margin-top: 30%;
            color: white;
            float: right;
            width: 300px;
            height: 250px;
        }
        .log-in-form {
            color: white;
            margin: 5px;
            float: right;
        }
    </style>
    
<div class="container">
    <div class="container-index row">
        <div class="col-sm-6">
            <h1>Welcome to Just Your Vote.</h1>
            <p class="text">
                Fed up of "fake news"? <br>
                Of being force fed opinions by "experts"? <br>
                Ask your Question- <br>
                And find out what the World <italic>really</italic> thinks.
            </p>
        </div>
        <div class="col-sm-6">
                   <div class="log-in panel">
                       <h4>Log In</h4>
                      <%= render '/components/log_in' %>
                   </div> 
                    
                   <div class="sign-up panel">     
                         <h4>New User?</h4>           
                        <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %>                    </div> 
                   </div>
        
        <div class="col-sm-12">
            <p class="footer-links">About  Help  Blog  Status  Jobs  Terms  Privacy  Cookies  Ads  info  Brand  Advertise  Businesses  Media  Developers  Directory Â© 2016 Flutter</p>
        </div>
</div>
        
    </div>

<% else # if the user IS signed in, render the following %>

    <script>document.location = "/home"</script>

<% end %>